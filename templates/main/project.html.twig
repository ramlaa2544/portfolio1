{% extends "base.html.twig" %}

{% block body %}
<div class="mt-4">
<h3> {{ form.vars.data.id is null ? 'Cr√©er un   projet' : 'Modifier un projet'}}</h3>
    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.name, 'Entrer Nom') }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description, 'Description') }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.date, 'Date') }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control'}, 'type': 'date'}) }}
    </div>
 <button type="submit" class="btn btn-primary mt-2">
 {{ form.vars.data.id is null ? 'Enregistrer' : ' Modifier'}}
</button> 

    {{ form_end(form) }}
</div>
{% endblock %}
