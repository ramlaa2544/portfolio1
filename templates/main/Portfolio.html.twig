<main class="main-wrapper">
				<section id="portfolio" class="section-home-portfolio">
					<div class="container-large">
						<div class="padding-vertical padding-huge">
							<div class="home-portfolio_component">
								<div class="margin-bottom margin-xxlarge">
									<div class="home-portfoio_top max-width-large">
										<div class="margin-bottom margin-xsmall">
											<div class="text-weight-semibold">Recent Projects</div>
										</div>
										<div class="margin-bottom margin-small">
											<h2>My Portfolio</h2>
											<div
												class="mt-3">
												<!-- Button to create a new project -->
												<a href="{{ path('create_project') }}" class="btn btn-success">Create New Project</a>
											</div>
										</div>
									</div>
								</div>
								<div class="home-portfolio_list-wrapper row">
									{% for project in projects %}
										<div class="card col-md-4">
											<div class="card-body">
												<h5 class="card-title">{{ project.name }}</h5>
												<p class="card-text">{{ project.description }}</p>
												<!-- Button to edit a project -->
												<a href="{{ path('edit_project', {'id': project.id}) }}" class="btn btn-warning">Edit</a>
												<!-- Button to delete a project -->
												<a href="{{ path('delete_project', {'id': project.id}) }}" class="btn btn-danger">Delete</a>
											</div>
										</div>
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
				</section>
			</main>