{# templates/skill/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Compétences{% endblock %}

{% block body %}
<header>
				<nav>
					<div class="container-fluid">
						<nav class="navbar navbar-expand-md navbar-light bg-light" role="navigation">
							<a href="/" class="navbar-brand"><img src="https://uploads-ssl.webflow.com/62f375fa349867308a2e90dc/63030f03c32fa7cc10215a72_Logo.webp" loading="lazy" width="140" alt="Logo" class="navbar_logo"/></a>
							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
								<span class="navbar-toggler-icon"></span>
							</button>
							<div class="collapse navbar-collapse justify-content-center" id="navbarNav">
								<ul class="navbar-nav">
									<li class="nav-item">
										<a href="home" class="nav-link">Home</a>
									</li>
									<li class="nav-item">
										<a href="about-me" class="nav-link">About Me</a>
									</li>
									<li class="nav-item">
										<a href="project" class="nav-link">Portfolio</a>
									</li>
									<li class="nav-item">
										<a href="skills" class="nav-link">skill</a>
									</li>
								</ul>
							</div>
							<div class="navbar_button-wrapper">
								<a href="login" class="btn btn-primary">conexion</a>
								<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
									<div class="menu-icon">
										<div class="menu-icon_line-top"></div>
										<div class="menu-icon_line-middle">
											<div class="menu-icon_line-middle-inner"></div>
										</div>
										<div class="menu-icon_line-bottom"></div>
									</div>
								</button>
							</div>
						</nav>
					</div>
				</nav>
			</header>

    <h1>Liste des Compétences</h1>

    <div class="row">
        {% for skill in skills %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ skill.name }}</h5>
                        <p class="card-text">ID: {{ skill.id }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('edit_skill', {'id': skill.id}) }}" class="btn btn-primary">Éditer</a>
                        <form action="{{ path('delete_skill', {'id': skill.id}) }}" method="post" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette compétence ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skill.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('create_skill') }}" class="btn btn-primary">Ajouter une Compétence</a>
{% endblock %}
